<p id="notice"><%= notice %></p>

<h1>Receipts</h1>

<table>
  <thead>
    <tr>
      <th>Creation date</th>
      <th>Informed gross amount</th>
      <th>Total discount amount</th>
      <th>Sii status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.creation_date %></td>
        <td><%= receipt.informed_gross_amount %></td>
        <td><%= receipt.total_discount_amount %></td>
        <td><%= receipt.sii_status %></td>
        <td><%= receipt.user %></td>
        <td><%= link_to 'Show', receipt %></td>
        <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
        <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

